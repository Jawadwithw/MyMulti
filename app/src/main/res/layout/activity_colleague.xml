<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    tools:context=".Main2806.Main2806.ColleagueContract.ColleagueActivity">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_singers"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_gravity="center_vertical"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/title_jobs"
                    style="@style/title_style"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight=".8"
                    android:gravity="center"
                    android:text="@string/colleague" />

                <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".2"
                    android:padding="@dimen/standard_margin"
                    android:src="@drawable/ic_arrow_back" />

            </LinearLayout>


        </androidx.appcompat.widget.Toolbar>


    </com.google.android.material.appbar.AppBarLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <LinearLayout
                android:id="@+id/linear_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/standard_margin_X2"

                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/cooperation_title1"
                    style="@style/TextViewStyle"
                   />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/tv_less_large_style"
                    android:layout_margin="@dimen/standard_margin"
                    android:text="@string/cooperation_select_category"
                    android:gravity="right"/>
                <Spinner
                    android:id="@+id/spinner_cooperate_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/standard_margin_X2"
                    />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/tv_less_large_style"
                    android:layout_margin="@dimen/standard_margin"
                    android:text="@string/cooperation_select_sub_category"
                    android:gravity="right"/>
                <Spinner
                    android:id="@+id/spinner_cooperate_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/standard_margin_X2"
                    />
                <EditText
                    android:id="@+id/et_job_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/standard_margin"
                    android:background="@drawable/selector_btn_previous"
                    android:hint="@string/cooperation_hint_jub_title"
                    android:inputType="text"
                    style="@style/input_text_style"
                    android:maxLength="100"
                    android:padding="@dimen/standard_margin"
                    />
                <EditText
                    android:id="@+id/et_phone_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/standard_margin"
                    android:background="@drawable/selector_btn_previous"
                    android:hint="@string/cooperation_hint_phone_num"
                    android:inputType="phone"
                    android:maxLength="11"
                    android:gravity="right"
                    style="@style/input_text_style"
                    android:padding="@dimen/standard_margin" />
                <EditText
                    android:id="@+id/et_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/standard_margin"
                    android:background="@drawable/selector_btn_previous"
                    android:hint="@string/et_address"
                    android:inputType="text"
                    style="@style/input_text_style"
                    android:maxLength="100"
                    android:padding="@dimen/standard_margin"
                    />
                <Button
                    android:id="@+id/btn_map"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_btn_previous"
                    android:text="@string/btn_map"
                    android:textAppearance="@style/btn_next_style"
                    android:textColor="@color/black"
                    android:layout_margin="@dimen/standard_margin_X2"
                    android:padding="@dimen/standard_margin_X2"
                    android:drawableEnd="@drawable/ic_map_pin"
                    />
                <EditText
                    android:id="@+id/et_job_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/standard_margin"
                    android:background="@drawable/selector_btn_previous"
                    android:hint="@string/cooperation_hint_desc"
                    android:inputType="text"
                    style="@style/input_text_style"
                    android:maxLength="100"
                    android:padding="@dimen/standard_margin" />

            </LinearLayout>
            <Button
                android:id="@+id/btn_confirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_btn_confirm_main"
                android:text="@string/btn_confirm"
                android:textAppearance="@style/btn_next_style"
                android:layout_below="@id/linear_register"
                android:layout_margin="@dimen/standard_margin_X2"
                />




        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>