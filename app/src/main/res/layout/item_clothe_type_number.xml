<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="16dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_itemClotheTypeNumber_clotheIcon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="16dp"
            app:srcCompat="@drawable/ic_shirt_blue" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_itemClotheTypeNumber_plusContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="15dp"
            app:contentPadding="8dp"
            app:cardBackgroundColor="@color/zipJetColorPrimary">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    app:srcCompat="@drawable/ic_baseline_add_24"
                    app:tint="@color/white" />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/ll_itemClotheTypeNumber_numberIndicator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_itemClotheTypeNumber_plus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                app:srcCompat="@drawable/ic_baseline_add_24"
                app:tint="@color/zipJetColorPrimary" />

            <TextView
                android:id="@+id/tv_itemClotheTypeNumber_clotheNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textColor="@color/zipJetColorPrimary"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="4dp"/>


            <ImageView
                android:id="@+id/iv_itemClotheTypeNumber_remove"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                app:srcCompat="@drawable/ic_baseline_remove_24"
                app:tint="@color/zipJetColorPrimary" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>