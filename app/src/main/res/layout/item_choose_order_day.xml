<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cv_itemChooseOrderDay_container"
    android:layout_width="150dp"
    android:theme="@style/Theme.MaterialComponents.Light"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="16dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="30dp"
    app:contentPadding="8dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_itemChooseOrderDay_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 روزه"
            android:textColor="@color/zipJetColorDark"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/tv_itemChooseOrderDay_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20 هزار توامن هزینه اضافی"
            android:layout_marginTop="4dp"
            android:textSize="10sp"
            android:textStyle="bold"
            android:textColor="#A3A3A3"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>