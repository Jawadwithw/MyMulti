<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/selector_progress_dialog"
    android:layoutDirection="rtl"
    android:id="@+id/rating_dialog"
    android:layout_margin="@dimen/standard_margin">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/standard_margin"
        android:gravity="center"
        >
        <TextView
            android:id="@+id/tv_dialog_title"
            style="@style/TextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/titie_rating_bar"
            android:textSize="@dimen/normal_font_size"
            android:textColor="@android:color/black"
            android:layout_marginEnd="@dimen/standard_margin_X2"
            android:gravity="center"/>
        <RatingBar
            android:id="@+id/framework_normal_ratingbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:maxHeight="48dp"
            android:layout_marginLeft="-4dp"
            android:layout_marginRight="-4dp"
            android:rating="2.5"
            android:layoutDirection="ltr"/>

        <EditText
            style="@style/input_text_style"
            android:id="@+id/et_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_comment"
            android:gravity="center"
            android:maxLength="100"
            android:maxLines="2"
            android:textDirection="rtl"

            />


        <Button
            android:id="@+id/btn_ok"
            android:layout_width="wrap_content"
            android:layout_margin="@dimen/standard_margin"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_btn_confirm_main"
            android:text="@string/btn_rate"
            android:textAppearance="@style/dialog_button_text_styles" />



    </LinearLayout>




</RelativeLayout>