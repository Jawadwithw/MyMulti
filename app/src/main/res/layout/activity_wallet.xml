<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main2806.Main2806.WalletContract.WalletActivity"
    android:layoutDirection="rtl">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_singers"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_gravity="center_vertical"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/title_jobs"
                    style="@style/title_style"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight=".8"
                    android:gravity="center"

                    android:text="@string/title_profle" />

                <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".2"
                    android:padding="@dimen/standard_margin"
                    android:src="@drawable/ic_arrow_back"
                    tools:ignore="VectorDrawableCompat" />

            </LinearLayout>


        </androidx.appcompat.widget.Toolbar>


    </com.google.android.material.appbar.AppBarLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:padding="@dimen/standard_margin_X2">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_btn_previous"
            android:text="افزودن کارت بانکی"
            style="@style/tv_large_style"
            android:padding="@dimen/standard_margin_X2"
            android:gravity="center"
            android:layout_margin="@dimen/standard_margin_X2"
            android:drawableStart="@drawable/ic_group_pluse"/>
        <TextView
            android:id="@+id/tv_amount"
            style="@style/tv_wallet_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/standard_margin"
            android:textSize="@dimen/too_large_font_size"
            android:gravity="center"
            android:text="۵۰۰۰ تومان" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="@dimen/standard_margin">
            <TextView
                android:id="@+id/tv_sub_amount_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".3"
                android:text="@string/tv_10000"
                style="@style/tv_wallet_unselected"
                android:layout_margin="@dimen/standard_margin"
                android:background="@drawable/selector_wallet_amounts"
                android:padding="@dimen/standard_margin"/>
            <TextView
                android:id="@+id/tv_sub_amount_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".3"
                android:text="@string/tv_20000"
                android:textColor="@color/wallet_color"

                android:layout_margin="@dimen/standard_margin"
                android:textSize="@dimen/large_font_size"
                android:background="@drawable/selector_wallet_amounts"
                android:padding="@dimen/standard_margin"/>
            <TextView
                android:id="@+id/tv_sub_amount_0"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".3"
                android:text="@string/tv_30000"
                android:layout_margin="@dimen/standard_margin"
                style="@style/tv_wallet_unselected"
                android:background="@drawable/selector_wallet_amounts"
                android:padding="@dimen/standard_margin"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="@dimen/standard_margin">
            <Button
                android:id="@+id/btn_add"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".15"
                android:layout_margin="@dimen/standard_margin"
                android:textSize="@dimen/large_font_size"
                android:gravity="center"
                android:background="@drawable/ic_group_plus2"
                android:padding="@dimen/standard_margin"/>
            <TextView
                android:id="@+id/tv_amount_changing"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".7"
                android:text="۱۰۰۰ تومان"
                android:layout_margin="@dimen/standard_margin"
                android:textSize="@dimen/large_font_size"
                style="@style/tv_wallet_style"
                android:gravity="center"
                android:padding="@dimen/standard_margin"/>
            <Button
                android:id="@+id/btn_minus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".15"
                android:layout_margin="@dimen/standard_margin"
                android:textSize="@dimen/large_font_size"
                android:gravity="center"
                android:background="@drawable/ic_group_minus"
                android:padding="@dimen/standard_margin"/>
        </LinearLayout>
    </LinearLayout>


    <br.com.simplepass.loadingbutton.customViews.CircularProgressButton
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/standard_margin_X2"
        android:layout_gravity="bottom|center"
        android:background="@drawable/selector_btn_confirm_main"
        android:text="@string/btn_charge"
        android:textAppearance="@style/btn_next_style"
        app:spinning_bar_color="#FFF"
        app:spinning_bar_padding="6dp"
        app:spinning_bar_width="4dp"
        />

</androidx.coordinatorlayout.widget.CoordinatorLayout>