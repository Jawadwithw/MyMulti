<resources>

    <!-- develop.withw.flipcards.Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:fontFamily">@font/vazir</item>
    </style>


    <style name="TextViewStyle">
        <item name="android:fontFamily">@font/vazir</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/normal_font_size</item>
    </style>

    <style name="NavigationStyle">
        <item name="android:fontFamily">@font/vazir</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="title_style">
        <item name="android:fontFamily">@font/vazir</item>
        <item name="android:textColor">@color/toolbar_title_color</item>
        <item name="android:textSize">@dimen/large_font_size</item>
    </style>

    <style name="descriptions_text_styles">
        <item name="android:fontFamily">@font/vazir</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/large_font_size</item>
    </style>
    <style name="btn_next_style">
        <item name="android:fontFamily">@font/vazir</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/large_font_size</item>
    </style>

    <style name="tv_large_style">
        <item name="android:fontFamily">@font/vazir</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/too_large_font_size</item>
    </style>

    <style name="tv_less_large_style">
        <item name="android:fontFamily">@font/vazir</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/large_font_size</item>
    </style>
    <style name="tv_wallet_style">
        <item name="android:fontFamily">@font/vazir</item>
        <item name="android:textColor">@color/wallet_color</item>
        <item name="android:textSize">@dimen/too_large_font_size</item>
    </style>

    <style name="tv_wallet_unselected">
        <item name="android:fontFamily">@font/vazir</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">@dimen/large_font_size</item>
    </style>

    <style name="confrim_orders_title_styles">
        <item name="android:fontFamily">@font/vazir</item>
        <item name="android:textColor">@color/orange</item>
        <item name="android:textSize">@dimen/too_large_font_size</item>
    </style>

    <style name="dialog_button_text_styles">
        <item name="android:fontFamily">@font/vazir</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/large_font_size</item>
    </style>

    <style name="input_text_style">
        <item name="android:fontFamily">@font/vazir</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/normal_font_size</item>
        <item name="android:maxLines">2</item>
        <item name="android:maxLength">50</item>
        <item name="android:height">50dp</item>
        <item name="android:padding">@dimen/standard_margin</item>
    </style>


    <style name="FadeInOutAnimation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="MyTabLayout" parent="Base.Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/MyTabTextAppearance</item>
    </style>

    <style name="MyTabTextAppearance" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="textAllCaps">true</item>
        <item name="android:fontFamily">@font/vazir</item>
    </style>


    <style name="more_fragment_texts">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginRight">@dimen/standard_margin</item>
        <item name="android:textSize">@dimen/large_font_size</item>
        <item name="android:fontFamily">@font/vazir</item>
    </style>


    <style name="subcat_texts">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginRight">@dimen/standard_margin</item>
        <item name="android:textSize">@dimen/large_font_size</item>
        <item name="android:fontFamily">@font/vazir</item>
    </style>
    <style name="subcat_desc_texts">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginRight">@dimen/standard_margin</item>
        <item name="android:textSize">@dimen/normal_font_size</item>
        <item name="android:fontFamily">@font/vazir</item>
    </style>


    <style name="mySpinnerItemStyle" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:textColor">#03A9F4</item>
        <item name="android:color">#941414</item>
    </style>
</resources>
